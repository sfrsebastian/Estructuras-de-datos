<!DOCTYPE web-app PUBLIC
   "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
   "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

   <description>Servlet Calculadora Web</description>

   <!-- SERVLETS -->

   <servlet>
      <servlet-name>Home</servlet-name>
      <servlet-class>interfaz.ServletCupiFlights</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>Login</servlet-name>
      <servlet-class>interfaz.ServletLogin</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>Admin</servlet-name>
      <servlet-class>interfaz.ServletAdminOverview</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>Admin-agregar</servlet-name>
      <servlet-class>interfaz.ServletAdminAgregar</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>Admin-aeropuerto</servlet-name>
      <servlet-class>interfaz.ServletAdminAeropuerto</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>Consulta</servlet-name>
      <servlet-class>interfaz.ServletConsulta</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>Aeropuerto</servlet-name>
      <servlet-class>interfaz.ServletAeropuerto</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>General</servlet-name>
      <servlet-class>interfaz.ServletGeneral</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>Resultado</servlet-name>
      <servlet-class>interfaz.ServletResultado</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>Vuelo</servlet-name>
      <servlet-class>interfaz.ServletVuelo</servlet-class>
   </servlet>
   <!-- MAPPING -->
   
   <servlet-mapping>
      <servlet-name>Home</servlet-name>
      <url-pattern>/index.html</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>Login</servlet-name>
      <url-pattern>/login.html</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>Admin</servlet-name>
      <url-pattern>/admin.html</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>Admin-agregar</servlet-name>
      <url-pattern>/agregar.html</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>Admin-aeropuerto</servlet-name>
      <url-pattern>/admin-aeropuerto.html</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>Consulta</servlet-name>
      <url-pattern>/consulta.html</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>Aeropuerto</servlet-name>
      <url-pattern>/aeropuerto.html</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>General</servlet-name>
      <url-pattern>/general.html</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>Resultado</servlet-name>
      <url-pattern>/resultado.html</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>Vuelo</servlet-name>
      <url-pattern>/vuelo.html</url-pattern>
   </servlet-mapping>

</web-app>
