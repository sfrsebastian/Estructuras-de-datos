<?xml version="1.0"?>
<project name="CupiColegios" default="build" basedir="../">

	<!--
	*******************************************************
		Generales
	*******************************************************
	-->

	<!-- Classpath para compilación -->
	<path id="classpath">
		<fileset dir="./lib">
			<include name="*.jar" />
		</fileset>
	</path>

	<!-- Classpath para compilación de pruebas -->
	<path id="classpathTests">
		<fileset dir="./test/lib">
			<include name="**/*.jar" />
		</fileset>
		<fileset dir="./lib">
			<include name="**/*.jar" />
		</fileset>
		<pathelement location="classes" />
	</path>

	<!-- Inicialización de las Propiedades -->
	<target name="init" description="Inicializa las propiedades">
		<!-- Definición de Propiedades -->
		<property name="source" value="./src" />
		<property name="classes" value="./classes" />
		<property name="data" value="./data" />
		<property name="jar" value="cupiColegios.jar" />
		<property name="bin" value="./bin" />
		<property name="lib" value="./lib" />
		<property name="dist" value="./dist" />
		<property name="javadoc" value="./docs/api" />
		<!-- Borra y crea los directorios nuevamente -->
		<delete dir="${classes}" />
		<mkdir dir="${classes}" />
		<delete dir="${javadoc}" />
		<mkdir dir="${javadoc}" />
		<delete dir="${dist}" />
		<mkdir dir="${dist}" />
	</target>

	<!--
	*******************************************************
		Ejercicio
	*******************************************************
	-->

	<!-- Compilación -->
	<target name="compile" description="Compilación" depends="init">
		<!-- Compila -->
		<javac destdir="${classes}" debug="on" deprecation="on" optimize="on" classpathref="classpath">
			<src path="${source}" />
		</javac>
	</target>

	<!-- Creación de JAR -->
	<target name="build" depends="compile" description="Crea el JAR de la aplicación">
		<!-- Empaqueta las clases en un JAR -->
		<jar jarfile="${dist}/${jar}">
			<fileset dir="${classes}" />
			<!--Variables del manifest-->
			<manifest>
				<attribute name="Class-Path" value="${lib}/dom4j-1.6.1.jar" />
				<attribute name="Class-Path" value="${lib}/Estructuras de Datos.jar" />
				<attribute name="Class-Path" value="${lib}/poi-3.10-FINAL-20140208.jar" />
				<attribute name="Class-Path" value="${lib}/poi-ooxml-3.10-FINAL-20140208.jar" />
				<attribute name="Class-Path" value="${lib}/poi-ooxml-schemas-3.10-FINAL-20140208.jar" />
				<attribute name="Class-Path" value="${lib}/xmlbeans-2.3.0.jar" />
				<attribute name="Main-Class" value="interfaz.InterfazCupiColegios" />
			</manifest>
		</jar>
		<!-- Copia las librerias en dist -->
		<copy file="${lib}/dom4j-1.6.1.jar" todir="${dist}/${lib}" />
		<copy file="${lib}/Estructuras de Datos.jar" todir="${dist}/${lib}" />
		<copy file="${lib}/poi-3.10-FINAL-20140208.jar" todir="${dist}/${lib}" />
		<copy file="${lib}/poi-ooxml-3.10-FINAL-20140208.jar" todir="${dist}/${lib}" />
		<copy file="${lib}/poi-ooxml-schemas-3.10-FINAL-20140208.jar" todir="${dist}/${lib}" />
		<copy file="${lib}/xmlbeans-2.3.0.jar" todir="${dist}/${lib}" />
		<!-- Copia la carpeta data a dist -->
		<copy todir="${dist}/${data}">
			<fileset dir="${data}" />
		</copy>
	</target>

	<!-- Generación del javadoc -->
	<target name="javaDoc" depends="build" description="Genera el java doc de la aplicación">
		<javadoc destdir="${javadoc}">
			<fileset dir="${source}" />
		</javadoc>
	</target>

</project>
