<?xml version="1.0"?>
<project name="Estructuras de Datos" default="build" basedir="../">

	<!--
	*******************************************************
		Generales
	*******************************************************
	-->
	<!-- Classpath para compilación -->
	<path id="classpath">
		<fileset dir="./lib">
			<include name="*.jar" />
		</fileset>
	</path>

	<!-- Classpath para compilación de pruebas -->
	<path id="classpathTests">
		<fileset dir="./test/lib">
			<include name="**/*.jar" />
		</fileset>
		<pathelement location="classes" />
	</path>

	<!-- Inicialización de las Propiedades -->
	<target name="init" description="Inicializa las propiedades">
		<!-- Definición de Propiedades -->
		<property name="source" value="./src" />
		<property name="classes" value="./classes" />
		<property name="jar" value="Estructuras de Datos.jar" />
		<property name="bin" value="./bin" />
		<property name="test" value="./test" />
		<property name="dist" value="./dist" />
		<property name="javadoc" value="./docs/api" />
		<!-- Borra y crea los directorios nuevamente -->
		<delete dir="${classes}" />
		<mkdir dir="${classes}" />
		<delete dir="${dist}" />
		<mkdir dir="${dist}"/>
		<delete dir="${classes}/${test}" />
		<mkdir dir="${classes}/${test}"/>
		<delete dir="${javadoc}" />
		<mkdir dir="${javadoc}"/>
	</target>

	<!--
	*******************************************************
		Ejercicio
	*******************************************************
	-->

	<!-- Compilación -->
	<target name="compile" description="Compilación" depends="init">
		<!-- Compila -->
		<javac destdir="${classes}" debug="on" deprecation="on" optimize="on">
			<src path="${source}" />
		</javac>
	</target>

	<!-- Creación de JAR -->
	<target name="build" depends="compile" description="Crea el JAR de la aplicación">
		<!-- Empaqueta las clases en un JAR -->
		<jar jarfile="${dist}/${jar}">
			<fileset dir="${classes}" />
			<!--Variables del manifest-->
			<manifest>
			</manifest>
		</jar>
	</target>

	<!-- Compila las pruebas -->
	<target name="compileTest" description="Compilación de las pruebas" depends="compile">
		<javac destdir="${classes}/${test}" debug="on" deprecation="on" optimize="on" classpathref="classpathTests">
			<src path="${test}" />
		</javac>
	</target>


	<!-- Ejecución de las pruebas -->
	<target name="runTest" depends="compileTest" description="Ejecuta las pruebas del sistema">
		<java classname="junit.swingui.TestRunner" fork="yes">
			<classpath>
				<path refid="classpathTests" />
				<pathelement location="${test}" />
			</classpath>
			<arg value="testHashTable.testHashTable" />
			<jvmarg value="-ea" />
		</java>
	
		<java classname="junit.swingui.TestRunner" fork="yes">
			<classpath>
				<path refid="classpathTests" />
				<pathelement location="${test}" />
			</classpath>
			<arg value="testLista.testLista" />
			<jvmarg value="-ea" />
		</java>
		
		<java classname="junit.swingui.TestRunner" fork="yes">
					<classpath>
						<path refid="classpathTests" />
						<pathelement location="${test}" />
					</classpath>
					<arg value="testListaOrdenada.testListaOrdenada" />
					<jvmarg value="-ea" />
				</java>
	</target>

	<!-- Generación del javadoc -->
	<target name="javaDoc" depends="compile" description="Genera el java doc de la aplicación">
		<javadoc destdir="${javadoc}">
			<fileset dir="${source}" />
		</javadoc>
	</target>
</project>
